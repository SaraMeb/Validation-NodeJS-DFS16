{% extends 'layout.twig' %}
{% block body %}
  <h1>{{title}}</h1>
  <p>Welcome to {{title}}</p>
  <main class="">
  <div class="container">
<div class="row">
  <div class="col-lg-6 col-md-8" id="loginContainer">
    <div class="card shadow shadow-sm">
      <div class="card-header">
        <h3 class="mb-0">Identification</h3>
      </div>
    <div class="card-body">
      <form class="form" action="/users" method="POST" id="loginForm">
          <div class="form-group">
              <label for="email">Email</label>
              <input type="text" class="form-control" name="email" required>
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" name="password" class="form-control" required>
          </div>
          <input type="submit" class="btn btn-secondary float-right" id="loginSubmit" value="Identification">
      </form>
    </div>
    <div class="card-footer">
      <a href="#" class="float-right" id="btnRegister">Créer mon compte</a>
    </div>
    </div>
  </div>
</div>

{# Création de compte #}
    <div class="col-lg-6 col-md-8 d-none" id="registerContainer">
      <div class="card rounded shadow shadow-sm">
        <div class="card-header">
          <h3 class="mb-0">Création de compte</h3>
        </div>
      <div class="card-body">
        <form class="form" action="/users" method="POST" id="registerForm">
            <div class="form-group">
                <label for="username">Pseudo</label>
                <input type="text" class="form-control" name="username" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" name="email" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Confirmation de mot de passe</label>
                <input type="password" name="password_confirm" class="form-control"  required>
            </div>
            <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-4 pt-0">Avatar Mystère</legend>
              <div class="col-sm-8">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="avatar" id="avatar1" value="option1" checked required>
                  <label class="form-check-label" for="avatar1">
                    Avatar 1
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="avatar" id="avatar2" value="option2" required>
                  <label class="form-check-label" for="avatar2">
                    Avatar 2
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="avatar" id="avatar3" value="option3" required>
                  <label class="form-check-label" for="avatar3">
                    Avatar 3
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="avatar" id="avatar3" value="option4" required>
                  <label class="form-check-label" for="avatar3">
                    Avatar 4
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="avatar" id="avatar3" value="option5" required>
                  <label class="form-check-label" for="avatar3">
                    Avatar 5
                  </label>
                </div>
              </div>
            </div>
          </fieldset>
            <input type="submit" class="btn btn-secondary float-right" id="registerSubmit" value="Créer mon compte">
        </form>
      </div>
      <div class="card-footer">
        <a href="#" class="float-right" id="btnLogin">Connexion</a>
      </div>
      </div>
    </div>
  <main>
{% endblock %}
{% block javascript %}
  <script type="text/javascript" src="/javascripts/login.js"></script>
{% endblock %}
